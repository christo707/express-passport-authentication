<!DOCTYPE html>
<html>
<head>
  <title>OAuth Express Login</title>
  <link rel="shortcut icon" type="image/x-icon" href="/images/icon.ico" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
  <link rel="stylesheet" type="text/css" href="/css/login.css">
  <link rel="stylesheet" type="text/css" href="/css/materialize-social.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  <div class="nav-custom">
      <ul>
        <% if (user) { %>
        <li><a href="/api/auth/logout">Log out</a></li>
        <% } else { %>
        <li><a href="/api/auth/login">Login</a></li>
        <% } %>
        <li><a href="/">Homepage</a></li>
        <li><a href="/api/profile">Profile</a></li>
      </ul>
      <% if (user) { %>
      <ul class="right">
        <li><%= user.username %></li>
        <li><img src="<%= user.thumbnail %>"></li>
      </ul>
        <% } %>
  </div>
  <div class="section"></div>

  <main>
    <center>
      <div class="section"></div>

      <h5 class="indigo-text">Please, Signup for your account</h5>
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

          <form class="col s12" method="post" action="/api/auth/local/register">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' autocomplete="off" type='email' name='email' id='email' />
                <label for='email'>Enter your email</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' autocomplete="off" type='text' name='name' id='name' onkeyup='check_pass();'/>
                <label for='name'>Enter your name</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate'  autocomplete="off" type='password' name='password' id='password' onkeyup='check_pass();'/>
                <label for='password'>Enter your password</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate'  autocomplete="off" type='password' name='cpassword' id='cpassword' onkeyup='check_pass();'/>
                <label for='cpassword'>Confirm your password</label>
              </div>
            </div>

            <br />
            <% if (msg) { %>
            <div class='row'>
              <p style="color: red; text-align: center;"><%= msg %></p>
            </div>
            <% } %>
            <center>
              <div class='row'>
                <button type='submit' id='submit' name='btn_login' disabled class='col s12 btn btn-large waves-effect indigo'>Sign me Up</button>
              </div>
                <div class='row'>
                  -- or --
                </div>
                  <div class='row'>
                    <a class="waves-effect waves-light btn-floating btn-large social google">
                    <i class="fa fa-google"></i> Sign in with Google</a>
                    &nbsp;&nbsp;
                    <a class="waves-effect waves-light btn-floating btn-large social facebook">
                    <i class="fa fa-facebook"></i> Sign in with Facebook</a>
                    &nbsp;&nbsp;
                    <a class="waves-effect waves-light btn-floating btn-large social github">
                    <i class="fa fa-github"></i> Sign in with Github</a>
                    &nbsp;&nbsp;
                    <a class="waves-effect waves-light btn-floating btn-large social linkedin">
                    <i class="fa fa-linkedin"></i> Sign in with LinkedIn</a>
                  </div>
            </center>
          </form>
        </div>
      </div>

    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
  <script>
  function check_pass() {
    if (document.getElementById('password').value ==
            document.getElementById('cpassword').value &&
            document.getElementById('name').value.length > 0 ) {
        document.getElementById('submit').disabled = false;
    } else {
        document.getElementById('submit').disabled = true;
    }

}
  </script>
</body>

</html>
